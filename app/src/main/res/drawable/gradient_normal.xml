<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="false">

        <layer-list>

            <item android:left="10dp" android:top="4dp">
                <shape>
                    <corners android:radius="20dp"/>
                    <solid android:color="#A6000000"/>
                </shape>
            </item>
            <item android:bottom="2dp" android:right="2dp">

                <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

                    <gradient android:angle="270"
                        android:startColor="#06b"
                        android:centerColor="#cc2b"
                        android:endColor="#bebebe" />
                    <corners android:radius="20dp"/>
                    <stroke android:width="0dp" android:color="#000"/>
                    <padding android:left="10dp" android:bottom="10dp" android:top="10dp" android:right="10dp"/>

                </shape>

            </item>

        </layer-list>

    </item>

    <item android:state_pressed="true">

        <shape xmlns:android="http://schemas.android.com/apk/res/android" android:shape="rectangle">

            <gradient
                android:startColor="#ffbeb6"
                android:centerColor="#cc2bff"
                android:endColor="#b3be00" />
            <corners android:radius="20dp"/>

        </shape>

    </item>

</selector>